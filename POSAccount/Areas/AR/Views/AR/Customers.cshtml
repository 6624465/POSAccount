@model List<POSAccount.Contract.Debtor>

@{
    ViewBag.Title = "List Of Customers";
}
<div class="box box-solid box-default">
    <div class="box-header">
        <h3 class="box-title">Customers List</h3>
    </div>
    <div class="box-body">
        <fieldset class="form-horizontal">           

            @* @Html.ActionLink("New Chart Of Account", "EditChartOfAccount", "MasterData", new { area = "MasterData" }, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary" })*@

            <!-- Display List Section -->


            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="tbDetails" data-toggle="tab">Customer Details</a>
                    </li>
                    <li class="pull-right">
                        <div class="btn-group btn-primary">
                           @Html.ActionLink("New Customer", "DebtorProfile", "AR", new { area = "AR", DebtorCode = "NEW" }, new { @class = "btn btn-small btn-primary" })
                        </div>
                    </li>
                </ul>
                <!-- Display List Section -->
                <div class="tab-content">
                    <div class="tab-pane active" id="tbDetails">
                        <table class="table table-striped table-hover table-bordered ">
                            <thead style="background-color:steelblue;color:white;font-size:12px;">
                                <tr>
                                    <th>Customer Code</th>
                                    <th>Customer Name</th>
                                    <th>Registration No.</th>
                                    <th>Account Code</th>
                                    <th>Payment Type</th>
                                </tr>
                            </thead>
                            <tbody style="font-size:12px;">
                                @foreach (POSAccount.Contract.Debtor item in Model)
                                {
                                    <tr>
                                        <td>@Html.ActionLink(@item.DebtorCode, "DebtorProfile", "AR", new { DebtorCode = @item.DebtorCode }, new { data_modal = "", id = "btnCreate", @class = "btn btn-link" })</td>
                                        <td> @item.DebtorName </td>
                                        <td> @item.RegistrationNo </td>
                                        <td> @item.DebtorAccountDescription </td>
                                        <td> @item.PaymentType</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


            
        </fieldset>
    </div>

</div>


