@using (Html.BeginForm("UploadImages", "MasterData", FormMethod.Post, new {  enctype = "multipart/form-data" }))
{

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Product Photo</h3>
        </div>
        <div class="panel-body">
            <fieldset class="form-horizontal">
                <div class="form-group">
                    <div>
                        <label for="txtProductCode" class="col-md-2 control-label input-sm">Product Code</label>
                        <div class="col-md-2">
                            @Html.TextBoxFor(m => m.Code, new {@id="txtProductCode",  @class = "form-control input-sm" })
                        </div>
                        <label for="txtInvoiceNo" class="col-md-2 control-label input-sm">Registration No.</label>
                        <div class="col-md-4">
                            <input type="file" name="uploadImages" multiple="multiple" class="input-files" />
                            <input type="submit" name="ProductImage" value="Upload" class="btn btn-upload" />
                            @*@Html.TextBoxFor(m => m.ProductImage, new {  @class = "form-control input-sm" })*@
                        </div>
                    </div>
                </div>


            
            </fieldset>
            
        </div>

    </div>
    <input type="submit" class="btn btn-primary" value="Save" />
    <a href="#" class="btn btn-default">Clear</a>
    <a href="#" class="btn btn-danger">Delete</a>
    <a href="#" class="btn btn-default">Back</a>

}
