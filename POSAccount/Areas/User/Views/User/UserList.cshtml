@model List<POSAccount.Contract.Users>

@{
    ViewBag.Title = "List Of Users";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<div class="box box-solid box-default ">
    <div class="box-header with-border">
        <h3 class="box-title">List Of Users
        </h3>
    </div>    
    <div class="box-body">
        <fieldset class="form-horizontal">
            <div class="row pull-right" style="padding-bottom:10px;">
                <div class="col-md-12">
                    <a class="btn btn-small btn-primary" data-modal="" href="@Url.Content("~/User/EditUser?userID=NEW")" id="btnCreate"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;New User</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table id="tblList" class="table table-striped table-hover table-bordered table-responsive setting-table">
                        <thead style="background-color: steelblue; color: white; font-size: 12px;">
                            <tr>
                                <th>User ID</th>
                                <th>User Name</th>
                                <th>Role</th>
                                <th>Status</th>

                            </tr>
                        </thead>
                        <tbody style="font-size: 12px;">
                            @if (Model != null)
                            {
                                foreach (POSAccount.Contract.Users item in Model)
                                {
                                <tr>
                                    <td>@Html.ActionLink(@item.UserID, "EditUser", "User", new { userID = @item.UserID }, new { data_modal = "", id = "btnCreate", @class = "btn btn-link" })</td>
                                    <td>@item.UserName </td>
                                    <td>@item.RoleCode </td>
                                    <td>@item.LogInStatus </td>
                                </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Display List Section -->


        </fieldset>
    </div>

</div>

@section Scripts {

    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblList').DataTable({
                responsive: true
            });
            var table = $('#tblList').DataTable();
            $('#tblList tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });
        });

    </script>
}