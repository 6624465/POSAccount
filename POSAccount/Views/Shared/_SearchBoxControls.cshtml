@model POSAccount.ViewModals.Search.SearchWrapper
@{
    List<SelectListItem> whereClauseList = new List<SelectListItem>() {
        new SelectListItem { Value = "LIKE", Text = "LIKE" },
        new SelectListItem { Value = "=", Text = "=" },
        new SelectListItem { Value = ">=", Text = ">=" },
        new SelectListItem { Value = "<=", Text = "<=" },
    };
}
<style type="text/css">
    .modal-search.row{ margin-bottom:15px;}
    .modal-search label.col-xs-3{ padding-right:0px;padding-left:0px;}
</style>
<div class="form-horizontal">
    <div class="form-group row">
        <div class="col-md-12">
            <table>
                <tr>
                    <td style="font-weight:bold;">Search By</td>
                    <td>&nbsp;&nbsp;</td>
                    <td>@Html.DropDownListFor(x => x.searchVm.SearchBy, new SelectList(Model.SearchByList, "SearchColumnName", "SearchColumnDisplay", 1),"Choose One", new { @class = "form-control input-sm" })</td>
                    <td>&nbsp;&nbsp;&nbsp;</td>
                    <td style="font-weight:bold;">Where Clause</td>
                    <td>&nbsp;&nbsp;</td>
                    <td style="padding-top:3px;">@Html.DropDownListFor(x => x.searchVm.whereclause, new SelectList(whereClauseList, "Value", "Text", 1),"Choose One", new { @class = "form-control input-sm" })</td>
                    <td>&nbsp;&nbsp;&nbsp;</td>
                    <td style="padding-top:3px;">@Html.TextBoxFor(x => x.searchVm.txtSearch, new { @class = "form-control input-sm" })</td>
                    <td>&nbsp;&nbsp;&nbsp;</td>
                    <td style="padding-top:3px;"><button class="btn btn-primary btn-sm" id="btnSearch" onclick="btnSearch()"><i class="fa fa-search">&nbsp;Search</i></button></td>
                </tr>
            </table>
        </div>        
    </div>
    
